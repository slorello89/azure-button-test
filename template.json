{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sku": {
            "type": "string",
            "defaultValue": "B1",
            "metadata": {
              "description": "The SKU of App Service Plan "
            }
        },
        "webAppName":{
            "defaultValue": "Skeleton-App",
            "type": "string"
        },
        "VONAGE_API_KEY": {
            "type": "string",
            "metadata": {
                "description": "Your Vonage API Key"
              }
          },
        "VONAGE_API_SECRET": {
            "type": "string",
            "metadata": {
                "description": "Your Vonage API Secret"
              }
          },
          "linuxFxVersion": {
            "type": "string",
            "defaultValue": "DOTNETCORE|Latest",
            "metadata": {
              "description": "The Runtime stack of current web app"
            }
          }
    },
	"variables": {
        "webAppPortalName": "[concat(parameters('webAppName'), '-webapp')]",
        "appServicePlanName": "[concat('AppServicePlan-', parameters('webAppName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('webAppPortalName')]",
            "location":"East US",
            "kind": "app,linux",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "properties": {
                "reserved": true,
                "appCommandLine": "dotnet dotnet-skeleton-app.dll"
            },
            "resources": [
                {
                    "dependsOn":["[variables('webAppPortalName')]"],
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2018-02-01",
                    "properties": {
                      "VONAGE_API_KEY": "[parameters('VONAGE_API_KEY')]",
                      "VONAGE_API_SECRET": "[parameters('VONAGE_API_SECRET')]"
                    }
                  }
            ]
        }
    ]
  }