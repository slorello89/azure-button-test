{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sku": {
            "type": "string",
            "defaultValue": "B1",
            "metadata": {
              "description": "The SKU of App Service Plan "
            }
        },
        "webAppName":{
            "defaultValue": "Skeleton-App",
            "type": "string"
        },
        "VONAGE_API_KEY": {
            "type": "string",
            "metadata": {
                "description": "Your Vonage API Key"
              }
          },
        "VONAGE_API_SECRET": {
            "type": "string",
            "metadata": {
                "description": "Your Vonage API Secret"
              }
          },
          "linuxFxVersion": {
            "type": "string",
            "defaultValue": "DOTNETCORE|Latest",
            "metadata": {
              "description": "The Runtime stack of current web app"
            }
          },
          "location":{
              "type": "string",
              "defaultValue": "East US",
              "metadata": {
                  "description":"where you want your server deployed"
              }
          }
    },
	"variables": {
        "webAppPortalName": "[concat(parameters('webAppName'), '-webapp')]",
        "appServicePlanName": "[concat('AppServicePlan-', parameters('webAppName'))]",
        "appServicePlanPortalName":"[concat('AppServicePlan-',parameters('webAppName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-06-01",
            "name": "[variables('appServicePlanPortalName')]",
            "location":"[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "kind": "linux",
            "properties": {
                "reserved": true             
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('webAppName')]",
            "location":"[parameters('location')]",
            "dependsOn": ["[resourceId('Microsoft.Web/serverfarms',variables('appServicePlanPortalName'))]"]                        
        }
    ]
  }